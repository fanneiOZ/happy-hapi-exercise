{
    "env": {
        "browser": true,
        "es2020": true,
        "es6": true
    },
    "extends": ["airbnb-base"],
    "plugins": ["import"],
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", 4],
        "no-warning-comments": "off",
        "max-len": ["error", 100],
        "multiline-comment-style": "error",
        "semi": "off",
        "constructor-super": "error",
        "class-methods-use-this": "off",
        "import/prefer-default-export": "off",
        "arrow-parens": "off",
        "import/extensions": "off",
        "object-curly-newline": "off"
    }
}
